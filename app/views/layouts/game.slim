    = stylesheet_link_tag 'game', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'game'

  body

    #myTopnav.topnav
      - if current_player
        = link_to @profile_path do
          = image_tag @selected == :profile ?  'game/profile-selected.png' :  'game/profile.png', size: '64x64'
          .div class=('selected' if @selected == :profile) = current_player.handle
      = link_to '/game/profiles' do
        = image_tag @selected == :list ? 'game/list-selected.png' : 'game/list.png', size: '64x64'
        .div class=('selected' if @selected == :list) Players
      a href="/game/leaderboards"
        = image_tag @selected == :leaderboard ? 'game/leaderboard-selected.png' : 'game/leaderboard.png', size: '64x64'
        .div class=('selected' if @selected == :leaderboard) Leaderboard
      - if current_player
        = link_to game_profile_discographies_path(current_player) do
          = image_tag @selected == :disco ? 'game/discography-selected.png' : 'game/discography.png', size: '64x64'
          .div class=('selected' if @selected == :disco) Discography


    .remodal#dans_take data-remodal-id="dans_take"
      h3.title
      .star data-id=""
        - if @player == current_player
          a.toggle_favorite href="javascript:;"
            #the_star.fa.fa-star-o
      .artist
      .year.digital 1980
      p.review


    .game
      .panel
        .achievements
          - flash.each do |key, value|
            .big.alert class="alert-#{key}"
              = value
              br

    = yield

    footer.game
      - if current_player
        = link_to "Logout #{current_player.name}", destroy_player_session_path, method: :delete
      - else
        = link_to "Sign in with Facebook", player_facebook_omniauth_authorize_path

    link href="https://fonts.googleapis.com/css?family=Press+Start+2P|Permanent+Marker|Righteous" rel="stylesheet"

javascript:
  $(function() {
      $.ajaxSetup({
          headers: {'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')}
      });

      $(".review_reveal").click(function () {
          $("#dans_take .star").data('id', $(this).data('id'));
          $("#dans_take h3.title").html($(this).data('title'));
          $("#dans_take .artist").html($(this).data('artist'));
          $("#dans_take p.review").html(
              $(this).data('review')
          );
          $("#dans_take .year").html($(this).data('year'));

          $("#dans_take").removeClass("bg-cassette");
          $("#dans_take").removeClass("bg-cassette");
          $("#dans_take").removeClass("bg-vhs");
          $("#dans_take").addClass($(this).data('bgclass'));

          if ($(this).data('star') == true) {
              $("#the_star").removeClass('fa-star-o');
              $("#the_star").addClass('fa-star');
          } else {
              $("#the_star").removeClass('fa-star');
              $("#the_star").addClass('fa-star-o');
          }
      });

      $(".star a").click(function() {
          var url = "/game/favorites/" + $(this).parent().data('id');
          var fave = false;

          if ($("#the_star").hasClass('fa-star-o')) {
              $("#the_star").removeClass('fa-star-o');
              $("#the_star").addClass('fa-star');
              fave = true;
          } else {
              $("#the_star").removeClass('fa-star');
              $("#the_star").addClass('fa-star-o');
          }

          $.ajax({
              method: 'PUT',
              url: url,
              data: {fave: fave}
          });

          $('[data-remodal-id]').remodal().close();
      });
  });

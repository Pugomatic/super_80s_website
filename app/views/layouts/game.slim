doctype html
html
  head
    = render partial: 'layouts/meta'

    = yield :header

    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'game', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'game'

  body
    = render partial: 'layouts/fb_js'

    .remodal#dans_take data-remodal-id="dans_take"
      h3.title
      .star data-id=""
        - if @player == current_player
          a.toggle_favorite href="javascript:;"
            #the_star.fa.fa-star-o
      .artist
      .year.digital 1980
      p.review


    .game
      .panel
        .achievements
          - flash.each do |key, value|
            .big.alert class="alert-#{key}"
              = value
              br

    = yield

    footer.game
      - if current_player
        = link_to "Logout #{current_player.name}", destroy_player_session_path, method: :delete
      - else
        ' Sign in with
        = render partial: 'game/beta_competition/login'

